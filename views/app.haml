!!!
%html.no-js{ :lang => "en" }
  %head
    %title Blog
    %meta{ :charset => "utf-8" }
    %meta{ :http => { :equiv => "X-UA-Compatible" }, :content => "IE=edge,chrome=1" }
    %meta{ :name => "description", :content => @description ||= "" }
    %meta{ :name => "viewport", :content => "width=device-width" }
    %link{ :rel => "stylesheet", :src => "/css/screen.css" }
    %script{ :src => "/js/vendor/modernizr-2.6.2.min.js" }
    - @handlebars.each do |template|
      - if template.is_a? String
        - template = { :name => template, :partial => template }
      %script{ :type => "text/x-handlebars", :data => { :template => { :name => template[:name] }}}
        = partial template[:partial]
  %body
    %script{ :src => "/js/vendor/jquery-1.9.1.min.js" }
    %script{ :src => "/js/vendor/handlebars-1.0.0-rc.3.js" }
    %script{ :src => @ember }
    %script{ :src => @ember_data }
    %script{ :src => "/js/plugins.js" }
    %script{ :src => "/js/main.js" }
